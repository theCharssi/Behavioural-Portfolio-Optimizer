# Behavioral Portfolio Optimizer - Environment Configuration

# API Configuration
API_URL=http://localhost:8000
API_TIMEOUT=30

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Behavioral Portfolio Optimizer
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://portfolio_user:portfolio_secure_password@localhost:5432/behavioral_portfolio
DB_HOST=localhost
DB_PORT=5432
DB_NAME=behavioral_portfolio
DB_USER=portfolio_user
DB_PASSWORD=portfolio_secure_password

# Brokerage APIs
# Alpaca Markets
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Alpha Vantage (Market Data)
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# IEX Cloud (Market Data)
IEX_CLOUD_TOKEN=your_iex_cloud_token_here

# Interactive Brokers
IB_ACCOUNT_ID=your_ib_account_id_here
IB_USERNAME=your_ib_username_here
IB_PASSWORD=your_ib_password_here

# JWT & Authentication
SECRET_KEY=your_secret_key_here_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Cache
REDIS_URL=redis://localhost:6379

# Email Configuration (for nudge notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SENDER_EMAIL=noreply@behavioral-portfolio.com

# SMS Configuration (Twilio for nudge delivery)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_BIAS_DETECTION=true
ENABLE_NUDGE_ENGINE=true
ENABLE_BROKERAGE_SYNC=true
ENABLE_BACKTESTING=true

# Model Configuration
BIAS_DETECTION_THRESHOLD=70
BACKTESTING_WINDOW_DAYS=365
MAX_CONCURRENT_USERS=10000

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=behavioral-portfolio-data

# Error Tracking (Sentry)
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
